<html>
    <head>
        <%- include('../partial/bootstrap.ejs')%>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    </head>
    <body>
        <div class="container mt-5">
            <div class="row">
                <div class="col-12">
                  <table class="table">
                      <thead>
                          <tr>
                              <th>S.no</th>
                              <th>Name</th>
                              <th>Edit</th>
                          </tr>
                      </thead>
                      <tbody>
                         <%
                          let sno = 1;
                          for(category of categoryList)
                          {
                         %>
                           <tr id="row<%=category.categoryId%>">
                               <td><%=sno++%></td>
                               <td><%=category.categoryName%></td>
                               
                               <td>
                                  <a href="/category/edit-category/<%=category.categoryId%>"> 
                                   <button class="btn btn-primary">Edit</button>
                                 </a> 
                                </td>
                           </tr> 
                         <%}%>    
                      </tbody>
                  </table>
                </div>
            </div>
        </div>
    </body>
</html>