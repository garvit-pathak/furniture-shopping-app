<html>
    <head>
        <%- include('../partial/bootstrap.ejs')%>
    </head>
    <body>
        <div class="container mt-5">
        <form action="/product/edit-product" method="POST">
            <input type="hidden" name="id" value="<%=product.productid%>"/>
            <div class="form-group">
                <lable>Name</lable>
                <input value='<%=product.name%>' type="text" name="name" class="form-control"/>
            </div>
            <div class="form-group">
                <lable>Price</lable>
                <input value='<%=product.productPrice%>' type="text" name="productPrice" class="form-control"/>
            </div>
            <div class="form-group">
                <lable>FrontView</lable>
                <input value="<%=product.frontview%>" type="text" name="frontview" class="form-control"/>
            </div>
            <div class="form-group">
                <lable>BackView</lable>
                <input value="<%=product.backview%>" type="text" name="backview" class="form-control"/>
            </div>
            <div class="form-group">
                <lable>LeftView</lable>
                <input value="<%=product.leftview%>" type="text" name="leftview" class="form-control"/>
            </div>
            <div class="form-group">
                <lable>RightView</lable>
                <input value="<%=product.rightview%>" type="text" name="rightview" class="form-control"/>
            </div>
            <div class="form-group">
                <lable>Description</lable>
                <textarea name="description" class="form-control"><%=product.description%></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-primary" type="submit">Update product</button>
            </div>
        </form>
       </div>
    </body>
</html>